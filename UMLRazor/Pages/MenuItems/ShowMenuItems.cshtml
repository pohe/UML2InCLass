@page
@model UMLRazor.Pages.MenuItems.ShowMenuItemsModel
@{
    ViewData["Title"] = "List MenuItems";
}

<h1>List of menuitems</h1>

<p>
    <a asp-page="AddMenuItem">Create a new menuItem</a>
</p>

<form>
    search: <input type="text" asp-for="@Model.FilterCriteria" />
    <input type="submit" value="Filter" />
</form>


<table class="table">
    <thead>
        <tr>
            <th>No</th>
            <th>Name</th>
            <th>Description</th>
            <th>Type</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MenuItems)
        {
            <tr>
                <td>@item.No</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.TheMenuType</td>
                <td>@item.Price</td>
                <td><a asp-page="EditMenuItem" asp-route-editNo="@item.No">Edit</a></td>
                <td><a asp-page="DeleteMenuItem" asp-route-deleteNo="@item.No">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

